<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
    <div>
      <p><%= notice %></p>
    </div>
  <% end %>
   <% if flash[:alert] %>
    <div>
      <p><%= alert %></p>
    </div>
  <% end %>
  <% if current_user %>
    <div class="topnav">
      <%= link_to "Home", root_path %>
      <%= link_to "New Event", new_event_path%>
     <%= link_to "#{current_user.name}", user_path(current_user), style:"float:right; background-color: #36645c" %>
      <%= link_to "Log Out", session_path("current"), method: :delete, style: "float:right" %>
    </div>
<% else %>
    <div class="topnav">
     <%= link_to "Home", root_path %>
     <%= link_to "New Event", new_event_path%>
     <%= link_to "Log In", new_session_path, style: "float:right" %>
     <%= link_to "Sign Up", new_user_path, style: "float:right" %>
    </div>
<% end %>
    <%= yield %>
  </body>
</html>
